<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Créer un rendez-vous"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Les invités"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text=""
        android:id="@+id/contact"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="Contact"
            android:id="@+id/Ajout_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickContact"/>

        <Button
            android:text="Ajouter"
            android:id="@+id/Ajout_saisie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Texte_Date"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="bottom"
            android:text="La date"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Choix_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:onClick="choisirDate"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        android:orientation="horizontal"

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="creerRdv"
            android:text="Créer le rendez-vous" />
    </LinearLayout>

</LinearLayout>
