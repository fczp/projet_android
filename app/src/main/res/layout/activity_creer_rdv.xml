<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Créer un rendez-vous"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Invités"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text=""
        android:id="@+id/contact"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="Contact"
            android:id="@+id/Ajout_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickContact"/>

        <Button
            android:text="Ajout manuel"
            android:id="@+id/Ajout_manuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ajout_manuel"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="bottom"
            android:text="Date"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Texte_Date"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="bottom"/>

        <Button
            android:id="@+id/Choix_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:onClick="choisirDate"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        <Button
            android:id="@+id/btn_creer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:onClick="creerRdv"
            android:text="Créer le rendez-vous" />
    </LinearLayout>

</LinearLayout>
